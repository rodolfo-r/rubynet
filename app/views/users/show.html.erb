<% provide(:title, @user.name) %>
<div class="row">
  <% flash.each do |type, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-#{type}") %>
  <% end %>
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
